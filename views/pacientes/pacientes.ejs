<%- include('../layout') -%>
<div class="container mt-4">
  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>CPF</th>
        <th>Nome</th>
        <th>Idade</th>
        <th>Dia da consulta</th>
        <th>Hora da consulta</th>
      </tr>
    </thead>
    <tbody>
      <% pacientes.forEach(paciente => { %>
        <tr>
          <td><%= paciente.cpf %></td>
          <td><%= paciente.nome_completo %></td>
          <td><%= paciente.idade %></td>
          <% if(paciente.dia_consulta !== '0000-00-00'){ %>
          <td><%= paciente.dia_consulta %></td>
            <% } else { %> 
          <td>Sem consulta agendada</td>
          <% } %>
          <% if(paciente.hora_consulta !== '00:00:00'){ %>
            <td><%= paciente.hora_consulta %></td>
              <% } else { %> 
            <td>Sem consulta agendada</td>
            <% } %>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
